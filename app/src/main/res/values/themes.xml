        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="fontFamily">@font/fnt</item>
    </style>


    <!--Main Activity Theme-->
    <style name="Main_Activity_Theme" parent="Theme.AppCompat.NoActionBar">
